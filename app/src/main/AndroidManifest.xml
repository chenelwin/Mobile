<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.projectpmd">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lineblack"
        android:label="ProjectPMD"
        android:roundIcon="@drawable/lineblack"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PagerFragment.Friend.AddFriend.AddFriendActivity"
            android:screenOrientation="portrait"> </activity>
        <activity android:name=".PagerFragment.Chat.ChatActivity.ChatActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PagerFragment.More.ProfileActivity.ProfileActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>