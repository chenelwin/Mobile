<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.projectpmd">

    <application
        android:allowBackup="true"
        android:icon="@drawable/lineblack"
        android:label="ProjectPMD"
        android:roundIcon="@drawable/lineblack"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PagerFragment.Friend.AddFriend.AddFriendActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".PagerFragment.Chat.ChatActivity.ChatActivity">
        </activity>

    </application>

</manifest>